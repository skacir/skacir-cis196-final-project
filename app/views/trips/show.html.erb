<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @trip.user.name %>
</p>

<p>
  <strong>Departure:</strong>
  <%= @trip.departure %>
</p>

<p>
  <strong>Start location:</strong>
  <%= @trip.start_location %>
</p>

<p>
  <strong>End location:</strong>
  <%= @trip.end_location %>
</p>

<p>
  <strong>Transit:</strong>
  <%= @trip.transit %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @trip.cost %>
</p>

<p>
  <strong>Participants:</strong>
    <tr>
      <% @trip.users.each do |user| %>
        <td><%= user.name %></td>
      <% end %>
    </tr>
</p>

<% unless @trip.user != current_user %>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<% end %>

<% if logged_in? %>
  <%= link_to 'Join', join_trip_path(@trip), method: :post %> |
  <%= link_to 'Leave', leave_trip_path(@trip), method: :delete %> |
<% end %>

<%= link_to 'Back', trips_path %>
