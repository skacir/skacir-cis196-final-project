<p id="notice"><%= notice %></p>

<p>
  <h1><%= @user.name %></h1>
</p>


<p>
  <h4>
    <strong>Car:</strong>

    <% if @user.car %>
      Yes
      <strong>Number of Seats:</strong>
      <%= @user.number_of_seats %>
    <% else %>
      No
    <% end %>
  </h4>
</p>

<p>
  <table class='table'>
    <thead>
      <tr>
        <th>Phone Number</th>
        <th>Email Address</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%=@user.phone%></th>
        <th><%=@user.email%></th>
      </tr>
    </tbody>
  </table>
</p>

<p>
  <table class='table'>
    <thead>
      <tr>
        <th>Departure Time</th>
        <th>Trip</th>
        <th>Transit</th>
      </tr>
    </thead>
          
    <tbody>
      <% @user.trips.each do |trip| %>  
        <tr>
          <td><%= trip.departure %></td>
          <td><%= trip.start_location %>
            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
            <%= trip.end_location %></td>
          <td><%= trip.transit %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Show', trip, class: 'btn btn-success btn-xs' %>
              <%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-warning btn-xs' %>
              <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default btn-xs' %> |
<% end %>

<%= link_to 'Back', users_path, class: 'btn btn-default btn-xs' %>
